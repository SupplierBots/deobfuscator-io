{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@core/*": [
        "core/*"
      ],
    },
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
  },
  "lib": [
    "es2015"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}