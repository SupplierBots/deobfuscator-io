{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "paths": {
      "@core/*": [
        "./src/core/*"
      ],
      "@operations/*": [
        "./src/operations/*"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
}